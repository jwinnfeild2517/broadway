<div class="container" style="">
    <div class="row">
        <div class="col-sm-12">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row no-gutters" style="">
                    <div class="col-md-4">
                        <%= image_tag @movie.picture, class: "card-img" %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= @movie.title %></h5>
                            <p class="card-text"><p><%= @movie.description %></p></p>
                            <p class="card-text"><small class="text-muted"><%= @movie.category.name%></small></p>
                            <p class="card-text"><small class="text-muted">Director: <strong><%= @movie.director %></strong></small></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%# <div class="col-sm-4">

    </div>
</div>

<div class="links btn-group">
        <% if user_signed_in? %>

            <% if @movie.user_id == current_user.id %>
                <%= link_to 'Edit', edit_movie_path %>
                <%= link_to 'Delete', movie_path(@movie), method: :delete, data: {confirm: 'Are you sure'} %>
            <% end %>
        <% end %>
        <%= link_to 'Back', root_path %>
</div>

<div class="cotainer">
    <div class="row">
      <% Movie.all.each do |movie| %>
        <div class="col-sm">
          <div class="card" style="width: 17rem;">
            <%= image_tag(movie.picture, class: "card-img-top") if movie.picture.attached? %>
            <div class="card-body">
              <h5 class="card-title"><%= link_to movie.title, movie_path(movie) %></h5>
            </div> 
          </div>
        </div>
      <% end %>
    </div>
  </div>


